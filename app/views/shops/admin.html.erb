<h1>Listing shops</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>avatar</th>
    <th>url</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @shops.each do |shop| %>
    <tr>
      <td><%= link_to shop.name, shop.url %></td>
      <td><%= image_tag(shop.avatar_url) %></td>
      <td><%= shop.url %></td>
      <td><%= link_to 'Show', shop %></td>
      <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
      <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New shop', new_shop_path %>
