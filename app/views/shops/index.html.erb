<% @shops.each do |shop| %>
  <div class="row">
    <h3 class="col-md-12"><%= link_to shop.name, shop %></h3>
    <%= shop.url %>
    <div class="items">
      <% shop.items.first(4).each do |item|  %>
        <%= render partial: 'items/item', locals: {item: item, show_shop: false} %>
      <% end  %>
    </div>
  </div>
<% end %>