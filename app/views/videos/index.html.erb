<h1>Listing videos</h1>

<%= link_to 'New Video', new_video_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Img url</th>
      <th>Source</th>
      <th>Url</th>
      <th>Hits</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= image_tag video.img_url %></td>
        <td><%= video.source %></td>
        <td><%= video.url %></td>
        <td><%= video.hits %></td>
        <td><%= link_to 'Show', video %></td>
        <td><%= link_to 'Edit', edit_video_path(video) %></td>
        <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


