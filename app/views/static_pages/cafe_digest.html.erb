<% content_for :sidebar_selector do %>
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 class="no-margin">Order by</h4>
      <%= link_to 'Time', sort: 'date' %>
      <%= link_to 'Likes', sort: 'like' %>
      <br>
      <%= cafe_tag_nav_link('post', 'new') %>
      <%= cafe_tag_nav_link('post', 'card') %>
      <%= cafe_tag_nav_link('post', 'mental') %>
      <%= cafe_tag_nav_link('post', 'review') %>
    </div>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-striped table-condensed">
      <thead>
      <tr class="no-style-link">
        <th ><h2 class="no-margin">
          <%= link_to cafe_digest_path do %>
            <span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span>
            <strong>Cafe Digest</strong>
              <% end  %>
        </h2></th>
        <th class="hidden-xxs"><%= link_to '❤', sort: 'like' %></th>
        <th class="hidden-xxs"><%= link_to 'Time', sort: 'date' %></th>
      </tr>
      </thead>

      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
              <%= link_to post.title, post.url %><span class="hidden-xxs"> - <%= cafe_tag_link post %></span><br>
            <%= link_to post.url, class:'no-style-link hidden-xxs' do %>
              <%= truncate(post.abstraction, length: 250)%>
            <% end %>
            <div class="visible-xxs">
              <%= cafe_tag_link post %>
              <div class="pull-right">
                ❤<%= post.likes %>
                <%= post.created_at.strftime("%m/%d") %>
              </div>
            </div>
          </td>
          <td class="hidden-xxs"><%= post.likes %></td>
          <td class="hidden-xxs"><%= post.created_at.strftime("%m/%d") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
