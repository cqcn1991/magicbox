
    <div class="items row">
      <div class="col-md-12">
        <h3>Items</h3>
      </div>
      <div class="col-md-12">
        <div class="row">
          <% @shops.each do |shop| %>
            <% item = shop.items.first %>
            <%= render partial: 'items/item', locals: {item: item} %>
          <% end  %>
        </div>
      </div>
    </div>

    <div class="videos row">
      <h3 class="col-md-12">Videos</h3>
      <% @videos.each do |item| %>
        <%= render partial: 'videos/video', locals: {item: item}  %>
      <% end  %>
    </div>

    <div class="posts row">
      <h3 class="col-md-12">Posts</h3>
      <% @posts.each do |item| %>
        <div class="col-md-4">
          <div class="thumbnail">
            <div class="caption">
             <h4><%= link_to item.title, item.url %>
               <small class="pull-right">
                 <%= show_source_name(item) %>
                 <%= item.created_at.strftime("%m/%d") %>
               </small></h4>
              <%= truncate(item.abstraction, length: 100) %>
            </div>

          </div>
        </div>
      <% end  %>
    </div>



