<div class="resources">

  <div class="panel panel-default main">
    <div class="panel-heading clearfix">
      <h2 class="panel-title"><span class="glyphicon glyphicon-star"></span> General</h2>
    </div>
    <div class="panel-body">
      <div class="row">
        <% @community_websites[:sites].each do |site|  %>
          <%= render partial: 'site', locals: {site: site} %>
        <% end  %>
      </div>
      <div class="row">
      <% @general_websites[:sites].each do |site|  %>
        <%= render partial: 'site', locals: {site: site} %>
      <% end  %>
      </div>
    </div>
  </div>

  <div class="panel panel-default main">
    <div class="panel-heading clearfix">
      <h2 class="panel-title"><span class="glyphicon glyphicon-shopping-cart"></span> Shops</h2>
    </div>
    <div class="panel-body">
      <div class="row">
        <% @oversea_shops.each do |site|  %>
          <%= render partial: 'site', locals: {site: site} %>
        <% end  %>
      </div>
    </div>
  </div>

  <div class="panel panel-default main">
    <div class="panel-heading clearfix">
      <h2 class="panel-title">
        <span class="glyphicon glyphicon-facetime-video"></span>
        Youtube</h2>
    </div>
    <ul class="list-group">
      <%# @youtube_channels.count %>
      <% @youtube_channels.each do |channel_group|  %>
      <li class="list-group-item">
        <div class="row">
          <% channel_group.each do |site|  %>
            <div class="col-md-3 site">
              <%= image_tag(site[:favicon], class: 'favicon') %>
              <%= link_to(site[:name].truncate(25), site[:url], class: 'title') %>
            </div>
          <% end  %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>

</div>

