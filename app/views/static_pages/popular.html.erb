<% content_for :pop_selector do %>
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 class="no-margin">Trending in</h4>
      <%= link_to '3 Days', number: '3' %>
      <%= link_to '7 Days', number: '7' %>
      <%= link_to '30 Days', number: '30' %>
    </div>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-body">
    <h3 class="no-margin"><strong>热帖</strong></h3>
    <div class="posts row">
      <% @posts.each do |item| %>
        <div class="post col-md-6">
          <h4>
            <%= link_to item.title, item.url %>
            <small class="pull-right">
              <% if item.source == 'cafe' %>
                <%= item.likes %>❤
              <% elsif item.source == 'tieba' %>
                <%= item.reply_number %><span class="glyphicon glyphicon-comment"></span>
              <% end  %>
            </small>
          </h4>
          <div class="">
            <%= truncate(item.abstraction, length: 200) %>
          </div>
        </div>
      <% end  %>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <h3 class="no-margin"><strong>视频</strong></h3>
    <div class="videos row">
      <% @videos.each do |item| %>
        <%= render partial: 'videos/video', locals: {item: item}  %>
      <% end  %>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <h3 class="no-margin"><strong>商品</strong></h3>
    <div class="items row">
      <% @items.each do |item| %>
        <%= render partial: 'items/item', locals: {item: item, show_shop: false}  %>
      <% end  %>
    </div>
  </div>
</div>