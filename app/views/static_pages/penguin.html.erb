<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <% @penguin_lectures.each do |lecture| %>
        <div class="col-md-6 clearfix">
          <%= link_to lecture[:url] do %>
            <%= image_tag(lecture[:thumnail_url], class: 'pull-left') %>
            <div class="lecture-info pull-left">
              <h4><%= lecture[:title] %></h4>
              <h6>
                <% lecture[:stars].times do %>
                  <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <% end %>
                <%= lecture[:review_number] %>
              </h6>
            </div>
          <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>
