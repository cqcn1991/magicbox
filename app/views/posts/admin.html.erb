<%= link_to 'New Post', new_post_path, class:'pull-right' %>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Abstraction</th>
    <th>Source</th>
    <th>Likes</th>
    <th>Replies</th>
    <th>Time</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post.url %> - <%= post.category %></td>
      <td><%= post.abstraction %></td>
      <td><%= post.source %></td>
      <td><%= post.likes %></td>
      <td><%= post.reply_number %></td>
      <td><%= post.created_at.strftime("%m/%d") %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

