<div class="col-md-4">
  <div class="thumbnail">
    <div class="caption">
      <h4 class="post-title"><%= link_to item.title, item.url %>
        <small class="pull-right">
          <%= show_source_name(item) %>
          <%= item.created_at.strftime("%m/%d") %>
        </small></h4>
      <%= truncate(item.abstraction, length: 100) %>
    </div>
  </div>
</div>